// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String?       @unique
  emailVerified DateTime?
  name          String?
  image         String?
  githubId      String?       @unique
  githubToken   String?       @db.Text
  workspaces    Workspace[]
  skills        Skill[]
  llmProviders  LLMProvider[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Workspace {
  id            String    @id @default(cuid())
  name          String
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  githubRepo    String
  githubBranch  String    @default("main")
  containerId   String?
  containerUrl  String?
  opencodePort  Int?
  vscodePort    Int?
  vscodePassword String?
  status        String    @default("pending") // pending, starting, running, stopped, error
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@map("workspaces")
}

model Skill {
  id          String   @id @default(cuid())
  name        String   // Must match: ^[a-z0-9]+(-[a-z0-9]+)*$ (1-64 chars)
  description String   @db.Text // 1-1024 characters
  content     String   @db.Text // Full SKILL.md content including frontmatter
  license     String?  // Optional: MIT, Apache-2.0, etc.
  compatibility String? // Optional: opencode, claude, etc.
  metadata    Json?    // Optional: string-to-string map
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isGlobal    Boolean  @default(false) // If true, apply to all user's workspaces
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, name]) // Each user can have only one skill with a given name
  @@index([userId])
  @@map("skills")
}

// Known provider types that have simplified UI
enum ProviderType {
  OPENAI
  ANTHROPIC
  GOOGLE
  OPENROUTER
  AZURE_OPENAI
  AWS_BEDROCK
  OLLAMA
  LMSTUDIO
  GROQ
  TOGETHER
  MISTRAL
  DEEPSEEK
  XAI
  CUSTOM
}

model LLMProvider {
  id          String       @id @default(cuid())
  name        String       // Display name for the provider
  providerId  String       // Provider ID used in opencode config (e.g., "openai", "my-custom")
  type        ProviderType @default(CUSTOM)
  baseUrl     String?      // Base URL for API (required for CUSTOM, optional for known providers)
  apiKey      String?      @db.Text // Encrypted API key
  envVarName  String?      // Environment variable name for API key (e.g., OPENAI_API_KEY)
  headers     Json?        // Additional headers for requests
  options     Json?        // Additional provider options (timeout, retries, etc.)
  isEnabled   Boolean      @default(true)
  isDefault   Boolean      @default(false) // If true, this is the user's default provider
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  models      LLMModel[]   // Models available from this provider
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([userId, providerId]) // Each user can have only one provider with a given ID
  @@index([userId])
  @@map("llm_providers")
}

model LLMModel {
  id          String      @id @default(cuid())
  modelId     String      // Model ID used in opencode config (e.g., "gpt-4", "claude-sonnet-4-5")
  name        String      // Display name for the model
  description String?     @db.Text
  providerId  String
  provider    LLMProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  isEnabled   Boolean     @default(true)
  isDefault   Boolean     @default(false) // If true, this is the default model for the provider
  options     Json?       // Model-specific options (thinking budget, reasoning effort, etc.)
  variants    Json?       // Model variants configuration
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([providerId, modelId]) // Each provider can have only one model with a given ID
  @@index([providerId])
  @@map("llm_models")
}
